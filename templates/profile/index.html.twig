{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Mon profil</h1>
    
    <div class="card mb-4">
        <div class="card-body">
            <h2>Informations personnelles</h2>
            <table class="table">
                <tr>
                    <th style="width: 200px;">Pr√©nom</th>
                    <td>{{ app.user.firstname }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ app.user.lastname }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ app.user.email }}</td>
                </tr>
                <tr>
                    <th>Points</th>
                    <td>{{ app.user.points ?? 0 }}</td>
                </tr>
            </table>
            
            <div class="mt-3">
                <a href="{{ path('profile_edit') }}" class="btn btn-primary">Modifier mon profil</a>
            </div>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <h2>Mes notifications</h2>
            {% if app.user.notifications|length > 0 %}
                <div class="list-group">
                    {% for notification in app.user.notifications %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>{{ notification.label }}</div>
                                <small class="text-muted">{{ notification.createdAt|date('d/m/Y H:i') }}</small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info">
                    Vous n'avez aucune notification.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}